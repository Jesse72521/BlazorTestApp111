@page "/PassLine"

<h1>Pass Line Bets 4 - 10</h1>
<form>
    <div class="form-group">
        <label for="betLocationFormSelect">Bet Location</label>
        <select class="form-control" id="betLocationFormSelect" bind="@betLocation">
            <option>0</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
        </select>
    </div>
    <div class="form-group">
        <label for="betAmount">Bet Amount</label>
        <input type="text" class="form-control" bind="@betAmount" placeholder="Bet Amount" />
    </div>
    <div class="form-group">
        <label for="oddsBetAmount">Odds Bet Amount</label>
        <input type="text" class="form-control" bind="@oddsBetAmount" placeholder="Odds Bet Amount" />
    </div>
</form>

<button type="submit" class="btn btn-primary" onclick="@CalcMainReturn">Calculate</button>

<h1>Main Bet Payout: @mainBetTotal</h1>
<h1>Odds Bet Payout: @oddsBetTotal</h1>



@functions {

    double betLocation = 0;
    double betAmount = 0;
    double oddsBetAmount = 0;
    double mainBetTotal= 0;
    double oddsBetTotal = 0;


    void CalcMainReturn()
    {
        if (betLocation == 4)
        {
            mainBetTotal = 4;
        }
        else if (betLocation == 5)
        {
            mainBetTotal = 5;
        }
        else if (betLocation == 6)
        {
            mainBetTotal = 6;
        }
        else if (betLocation == 8)
        {
            mainBetTotal = 8;
        }
        else if (betLocation == 9)
        {
            mainBetTotal = 9;
        }
        else if (betLocation == 10)
        {
            mainBetTotal = 10;
        }
        else
        {
            mainBetTotal = -3;
        }
    }
}